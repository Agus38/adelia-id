rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules for the daily financial reports
    match /dailyReports/{reportId} {
      // Admins have full access to read and write any report
      allow read, write: if request.auth.token.role == 'Admin';
      
      // Regular users can create a report if the userId in the new data matches their own uid.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Regular users can read or update their own reports.
      allow read, update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Rules for user data
    match /users/{userId} {
      // Users can read and update their own profile.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Admins can list all users (for management page) and create new user documents.
      allow list, create: if request.auth.token.role == 'Admin';
    }

    // Rules for general application settings
    match /app-settings/{document=**} {
      // Anyone can read application settings (like menu items, branding).
      allow read: if true;
      // Only admins can change application settings.
      allow write: if request.auth.token.role == 'Admin';
    }
  }
}
